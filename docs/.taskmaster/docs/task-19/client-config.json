{
  "remoteTools": [
    "rust_query",
    "kubernetes_listResources",
    "kubernetes_getResource",
    "kubernetes_describeResource"
  ],
  "localServers": {
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspace"],
      "tools": [
        "read_file",
        "write_file",
        "list_directory",
        "create_directory",
        "edit_file"
      ],
      "workingDirectory": "project_root"
    },
    "security": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-security",
        "${SECURITY_CONFIG}"
      ],
      "tools": ["audit_scan", "vulnerability_check", "compliance_report"],
      "workingDirectory": "project_root"
    }
  }
}
